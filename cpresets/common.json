{
  "version":4,
  "configurePresets": [
    {
      "name": "common",
      "displayName": "common",
      "cacheVariables":
      {
        "CMAKE_EXPORT_COMPILE_COMMANDS":"ON"
      }
    },
    {
      "name": "Debug",
      "displayName": "Debug",
      "inherits": "common",
      "cacheVariables":
      {
        "CMAKE_BUILD_TYPE":"Debug"
      }
    },
    {
      "name": "Release",
      "displayName": "Release",
      "inherits": "common",
      "cacheVariables":
      {
        "CMAKE_BUILD_TYPE":"Release"
      }
    },
    {
      "name": "RelWithDebInfo",
      "displayName": "RelWithDebInfo",
      "inherits": "common",
      "cacheVariables":
      {
        "CMAKE_BUILD_TYPE":"RelWithDebInfo"
      }
    },
    {
      "name": "bld",
      "displayName": "bld",
      "binaryDir": "${sourceParentDir}/bld",
      "installDir": "${sourceParentDir}/install"
    },
    {
      "name": "bld-worktree",
      "displayName": "bld-worktree",
      "binaryDir": "${sourceParentDir}/bld-worktree",
      "installDir": "${sourceParentDir}/install-worktree"
    },
    {
      "name": "Ninja",
      "displayName": "Ninja",
      "inherits": "common",
      "generator": "Ninja"
    }
  ]
}
